<h1>Events</h1>

<p><button><a href="/new_event">Add a New Event</a></button></p>

<table class="table">
  <thead>
    <tr>
      <th>Bank</th>
      <th>Robber</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @events.each do |event| %>
    <tr>
          <td><%= event.bank_id %></td>
          <td><%= event.robber_id %></td>
          <td><button><a href="/events/<%= event.id %>">Show</a></button>
