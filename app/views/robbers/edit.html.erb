<h1>Editing Robber #<%= @robber.id %></h1>

<form action="/robbers/<%= @robber.id %>/update">
  <div>
    <label for="name">name</label><br />
    <input id="name" name="name" value="<%= @robber.name  %>" type="text" />
  </div>
  <div>
    <label for="email">email</label><br />
    <input id="email" name="email" value="<%= @robber.email  %>" type="text" />
  </div>
  <div>
    <input type="submit">
  </div>
</form>


