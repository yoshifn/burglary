<h1>New Membership</h1>

<form action="/create_membership">
  <div>
    <label for="robber_id">Gang</label><br />
    <select name="gang_id">
      <% @gangs.each do |gang| %>
      <option value="<%= gang.id %>"><%= gang.name %></option>
      <% end %>
    </select>
  </div>
  <div>
    <label for="gang_id">Robber</label><br />
    <select name="robber_id">
      <% @robbers.each do |robber| %>
      <option value="<%= robber.id %>"><%= robber.name %></option>
      <% end %>
    </select>
  </div>
  <div>
    <input type="submit">
  </div>
</form>

