<h1>Memberships</h1>

<p><button><a href="/new_membership">Add a New Membership</a></button></p>

<table class="table">
  <thead>
    <tr>
      <th>Robber</th>
      <th>Gang</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @memberships.each do |membership| %>
    <tr>
          <td><%= membership.robber_id %></td>
          <td><%= membership.gang_id %></td>
          <td><button><a href="/memberships/<%= membership.id %>">Show</a></button>
        </td>
      <td><button><a href="/memberships/<%= membership.id %>/edit">Edit</a></button></td>
      <td><button><a href="/memberships/<%= membership.id %>/destroy">Destroy</a></button></td>
    </tr>
  <% end %>
  </tbody>
</table>

