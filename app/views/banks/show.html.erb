<h1>Bank #<%= @bank.id %></h1>

<div>
  <strong>Name</strong>:<br />
  <p><%= @bank.name %></p>
</div>
<div>
  <strong>Location</strong>:<br />
  <p><%= @bank.location %></p>
</div>
<div>Bank's Robberies</div>
<ul>
  <% @bank.events.each do |event| %>
  <li><%= event.robber.name %></li>
  <% end %>
</ul> 
<a href="/banks/<%= @bank.id %>/edit">Edit</a> |
<a href="/banks/<%= @bank.id %>/destroy">Destroy</a>
