<h1>Banks</h1>

<p><button><a href="/new_bank">Add a New Bank</a></button></p>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @banks.each do |bank| %>
    <tr>
          <td><%= bank.name %></td>
          <td><%= bank.location %></td>
          <td><button><a href="/banks/<%= bank.id %>">Show</a></button>
        </td>
      <td><button><a href="/banks/<%= bank.id %>/edit">Edit</a></button></td>
      <td><button><a href="/banks/<%= bank.id %>/destroy">Destroy</a></button></td>
    </tr>
  <% end %>
  </tbody>
</table>

