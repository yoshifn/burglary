<h1>Gangs</h1>

<p><button><a href="/new_gang">Add a New Gang</a></button></p>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Lord</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @gangs.each do |gang| %>
    <tr>
          <td><%= gang.name %></td>
          <td><%= gang.lord %></td>
          <td><button><a href="/gangs/<%= gang.id %>">Show</a></button>
        </td>
      <td><button><a href="/gangs/<%= gang.id %>/edit">Edit</a></button></td>
      <td><button><a href="/gangs/<%= gang.id %>/destroy">Destroy</a></button></td>
    </tr>
  <% end %>
  </tbody>
</table>

