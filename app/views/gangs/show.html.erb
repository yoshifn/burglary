<h1>Gang #<%= @gang.id %></h1>

<div>
  <strong>Name</strong>:<br />
  <p><%= @gang.name %></p>
</div>
<div>
  <strong>Lord</strong>:<br />
  <p><%= @gang.lord %></p>
</div>
<div>Gang's Robbers</div>
<ul>
  <% @gang.memberships.each do |membership| %>
  <li><%= membership.robber.name %></li>
  <% end %>
</ul>  
<a href="/gangs/<%= @gang.id %>/edit">Edit</a> |
<a href="/gangs/<%= @gang.id %>/destroy">Destroy</a>
